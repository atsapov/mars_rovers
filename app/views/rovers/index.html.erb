<table>
<tr>
  <td class="sidebar_top">
    <% if @rover.step.nil? %>
      <%= render 'sidebar_for_no_started' %>
    <% else %>
      <%= render 'sidebar_for_started' %>
    <% end %>
  </td>
</tr>
<tr>
  <td class="sidebar_bottom">
    <% if @rover.step.nil? %>
      <%= render 'start_button' %>
    <% else %>
      <% if @rover.step < @rover.instruction.length %>
        <%= render 'go_button' %>
      <% else %>
        <%= render 'finish_button' %>
      <% end %>
    <% end %>
  </td>
</tr>
</table>


